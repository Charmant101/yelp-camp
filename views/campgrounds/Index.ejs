<% include ../partials/header %>

<% if (currentUser&& currentUser.isAdmin){ %>
    <h3>You are an Admin <%=currentUser.username%></h3>
<% } %> 
 <header class="jumbotron">
   <div class="container">
    <h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
  <p>Home to a selection of the World's best campgrounds</p>
  <p>
    <a class= "btn btn-primary btn-lg" href="/campgrounds/new"> Add new campground</a>
  </p> 
   </div>
  
</header>

    <div class="row text-center" style= "display:flex;flex-wrap:wrap;">
      <% campgrounds.forEach(function(campground){ %>
          <div class="col-md-3 col-sm-6">
              <div class ="thumbnail">
               <img id ="image" src ="<%= campground.image%>"> 
              </div>
              <div class="caption">
              <h3><%=campground.name%></h3>  
              </div>
              <p>
                <a href="/campgrounds/<%=campground._id%>" class= "btn btn-primary">More info</a>  
              </p>
                </div>
          <% }); %>
      </div>
<% include ../partials/footer %>


  